# ESP32 Uptime Monitor Configuration
# Copy this file to .env and modify values as needed.
# The .env file is gitignored to prevent sensitive values from being committed.
#
# String values should NOT be quoted - the build script adds quotes automatically.
# Boolean values should be true or false (lowercase).
# Integer values should be plain numbers.

# Wi-Fi credentials (required)
WIFI_SSID=your-wifi-ssid
WIFI_PASSWORD=your-wifi-password

# Web interface authentication (optional, leave empty to disable)
WEB_AUTH_USERNAME=
WEB_AUTH_PASSWORD=

# BLE/MeshCore configuration (optional)
BLE_DEVICE_NAME=ESP32-Uptime
BLE_PEER_NAME=MeshCore-XXX
BLE_PAIRING_PIN=123456
BLE_MESH_CHANNEL_NAME=Alerts
BLE_MESH_ROOM_SERVER_ID=
BLE_MESH_ROOM_SERVER_PASSWORD=

# ntfy notification configuration (optional)
NTFY_SERVER=https://ntfy.sh
NTFY_TOPIC=
NTFY_ACCESS_TOKEN=
NTFY_USERNAME=
NTFY_PASSWORD=

# Discord webhook configuration (optional)
DISCORD_WEBHOOK_URL=

# SMTP email configuration (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_ADDRESS=
SMTP_TO_ADDRESS=

# Boot notification (true/false)
BOOT_NOTIFICATION_ENABLED=true

# RGB LED status indicator (true/false)
LED_ENABLED=true

# Screen timeout in seconds (0 = disabled, 10-600 range)
# Only applies to boards with LCD displays (e.g., esp32-4848S040)
SCREEN_TIMEOUT=60
